# MYNFINI AI Game Master - Production Environment Configuration
# Template for Render.com deployment

# Application Environment
VITE_ENVIRONMENT=production
VITE_APP_VERSION=1.0.0
VITE_BUILD_TIME=__BUILD_TIME__

# API Configuration
VITE_API_BASE_URL=https://mynfini-api.onrender.com
VITE_API_TIMEOUT=30000
VITE_MAX_CONCURRENT_REQUESTS=5
VITE_RETRY_ATTEMPTS=3
VITE_CACHE_DURATION=3600

# AI Provider Configuration (Primary)
# Replace these with your actual API keys in Render dashboard
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_GROQ_API_KEY=your_groq_api_key_here

# AI Provider Configuration (Fallback)
VITE_HUGGINGFACE_API_KEY=your_huggingface_api_key_here
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# CORS and Security
VITE_CORS_ORIGIN=https://mynfini-frontend.onrender.com
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_PUSH_NOTIFICATIONS=false

# Performance Settings
VITE_LAZY_LOAD_THRESHOLD=1000
VITE_COMPRESSION_THRESHOLD=1024

# Monitoring and Error Tracking
VITE_SENTRY_DSN=__SENTRY_DSN__

# Service Worker
VITE_SW_CACHE_NAME=mynfini-v1.0.0