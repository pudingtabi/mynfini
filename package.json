{
  "name": "mynfini-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered creative storytelling game with dynamic world evolution",
  "main": "src/main.tsx",
  "homepage": "https://mynfini-frontend.onrender.com",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:render": "npm ci && npm test -- --run && npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "test:coverage": "vitest --coverage",
    "analyse": "npm run build && npx bundlesize",
    "serve": "serve -s dist -l 4173"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "lucide-react": "^0.263.1",
    "framer-motion": "^10.16.4",
    "axios": "^1.5.0",
    "styled-components": "^6.1.19",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^10.0.0",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "terser": "^5.19.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.4",
    "serve": "^14.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "150 kB"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/assets/*.woff2",
      "maxSize": "30 kB"
    }
  ]
}